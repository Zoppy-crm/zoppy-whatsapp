{
    "name": "@ZoppyTech/whatsapp",
    "version": "0.0.12",
    "description": "Zoppy Whatsapp",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "publish:whatsapp": "npm version patch && npm run build && npm publish",
        "test": "rm -f database.sqlite && npx jest",
        "test:cov": "npx jest --coverage",
        "prepare": "husky install",
        "lint": "pretty-quick --staged && lint-staged",
        "build": "rm -rf dist && tsc"
    },
    "files": [
        "/dist"
    ],
    "devDependencies": {
        "@babel/core": "^7.19.6",
        "@babel/types": "^7.20.0",
        "@nestjs/platform-express": "^9.4.0",
        "@nestjs/testing": "^9.0.5",
        "@types/jest": "^29.2.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@ZoppyTech/test-utils": "^0.0.13",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.4.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.1",
        "jest": "^29.2.2",
        "lint-staged": "^13.0.3",
        "lodash": "^4.17.21",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "sqlite3": "^5.0.8",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.0.0",
        "typescript": "^4.8.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ZoppyTech/zoppy-library-templates"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/ZoppyTech"
    },
    "peerDependencies": {
        "@nestjs/common": "^9.0.5",
        "@nestjs/config": "^2.2.0",
        "@ZoppyTech/models": "^2.1.20",
        "@ZoppyTech/utilities": "^1.0.135",
        "axios": "*",
        "uuid": "^8.3.2"
    },
    "lint-staged": {
        "*.{ts,js}": "eslint --cache --fix"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "globalSetup": "./tests/jest-global-setup.ts",
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1"
        }
    }
}
