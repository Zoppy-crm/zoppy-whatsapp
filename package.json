{
    "name": "@ZoppyTech/whatsapp",
    "version": "0.0.87",
    "description": "Zoppy Whatsapp",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "publish:whatsapp": "npm version patch && npm run build && npm publish",
        "test": "rm -f database.sqlite && npx jest",
        "test:cov": "npx jest --coverage",
        "prepare": "husky install",
        "lint": "pretty-quick --staged && lint-staged",
        "build": "rm -rf dist && tsc"
    },
    "files": [
        "/dist"
    ],
    "devDependencies": {
        "@nestjs/axios": "^0.1.0",
        "@nestjs/cli": "^9.3.0",
        "@nestjs/platform-express": "^9.4.2",
        "@nestjs/schematics": "^9.0.1",
        "@nestjs/testing": "^9.0.5",
        "@types/bcrypt": "^5.0.0",
        "@types/cron": "^2.0.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.5.0",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.0.0",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/sequelize": "^4.28.14",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@ZoppyTech/test-utils": "^0.1.29",
        "eslint": "^8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard-with-typescript": "^23.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.4.0",
        "eslint-plugin-prettier": "^4.2.1",
        "husky": "^7.0.4",
        "jest": "28.0.3",
        "lint-staged": "^13.2.2",
        "nodemailer": "^6.7.5",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "sequelize-cli": "^6.4.1",
        "source-map-support": "^0.5.21",
        "sqlite3": "^5.0.8",
        "supertest": "^6.1.3",
        "ts-jest": "28.0.1",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.0.0",
        "typescript": "^4.3.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ZoppyTech/zoppy-library-templates"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/ZoppyTech"
    },
    "peerDependencies": {
        "@nestjs/common": "^9.0.5",
        "@nestjs/config": "^2.2.0",
        "@ZoppyTech/utilities": "^1.1.125",
        "@ZoppyTech/models": "^2.1.104",
        "axios": "*",
        "uuid": "^8.3.2"
    },
    "lint-staged": {
        "*.{ts,js}": "eslint --cache --fix"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "globalSetup": "./tests/jest-global-setup.ts",
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1"
        }
    }
}
