{
    "name": "@ZoppyTech/whatsapp",
    "version": "4.8.5",
    "description": "Zoppy Whatsapp",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "publish:patch": "npm version patch && npm run build && npm publish",
        "publish:minor": "npm version minor && npm run build && npm publish",
        "publish:major": "npm version major && npm run build && npm publish",
        "test": "rm -f database.sqlite && npx jest",
        "test:cov": "npx jest --coverage",
        "prepare": "husky install",
        "lint": "pretty-quick --staged && lint-staged",
        "build": "rm -rf dist && tsc"
    },
    "files": [
        "/dist"
    ],
    "devDependencies": {
        "@nestjs/axios": "*",
        "@nestjs/cli": "*",
        "@nestjs/platform-express": "*",
        "@nestjs/schematics": "*",
        "@nestjs/testing": "*",
        "@types/bcrypt": "*",
        "@types/cron": "*",
        "@types/express": "*",
        "@types/jest": "*",
        "@types/multer": "*",
        "@types/node": "*",
        "@types/passport-jwt": "*",
        "@types/passport-local": "*",
        "@types/sequelize": "*",
        "@types/supertest": "*",
        "@typescript-eslint/eslint-plugin": "*",
        "@ZoppyTech/test-utils": "*",
        "eslint": "*",
        "eslint-config-prettier": "*",
        "eslint-config-standard-with-typescript": "*",
        "eslint-plugin-import": "*",
        "eslint-plugin-n": "*",
        "eslint-plugin-prettier": "*",
        "husky": "*",
        "jest": "*",
        "lint-staged": "*",
        "nodemailer": "*",
        "prettier": "*",
        "pretty-quick": "*",
        "sequelize-cli": "*",
        "source-map-support": "*",
        "sqlite3": "*",
        "supertest": "*",
        "ts-jest": "*",
        "ts-loader": "*",
        "ts-node": "*",
        "tsconfig-paths": "*",
        "typescript": "*"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ZoppyTech/zoppy-library-templates"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/ZoppyTech"
    },
    "peerDependencies": {
        "axios": "*",
        "uuid": "*",
        "@ZoppyTech/utilities": "*",
        "@ZoppyTech/models": "*",
        "@ZoppyTech/logger": "*",
        "@ZoppyTech/shared": "*"
    },
    "lint-staged": {
        "*.{ts,js}": "eslint --cache --fix"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "globalSetup": "./tests/jest-global-setup.ts",
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/$1"
        }
    }
}
